<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botron_item"
        android:orientation="vertical"
        android:padding="25dp"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/phong1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >


            <TextView
                android:id="@+id/tvNameRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng số 201"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="GIÁ PHÒNG: "
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tvPrice"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOẠI PHÒNG:"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/tvKindRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="ĐƠN (1 GIƯỜNG)"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TÌNH TRẠNG: "
                    android:textSize="12sp"
                    android:textColor="#000" />
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRỐNG"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Xem phòng"
                    android:textSize="10sp"
                    android:background="@drawable/buttom_bkg"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Đặt phòng"
                    android:textSize="10sp"
                    android:background="@drawable/buttom_bkg"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>